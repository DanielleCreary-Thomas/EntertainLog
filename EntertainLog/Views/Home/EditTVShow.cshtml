@model EntertainLog.Models.ViewModel.TVShowViewModel;
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>
            Edit @Model.CurrTVShow.Title
        </title>
    </head>
    <body>
        <div>
            <form asp-action="TVShow" asp-route-id="@Model.CurrUser.UserID" method="get">
                <button type="submit">Back</button>
            </form>
            <h1>TV Shows</h1>
        </div>

        <h3>Edit @Model.CurrTVShow.Title</h3>
        <form asp-action="TVShow" method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="@Model.CurrTVShow.TVShowID" value="@Model.CurrTVShow.TVShowID" />
            <br />
            <label asp-for="@Model.CurrTVShow.Title">The TV Show Title</label>
            <input asp-for="@Model.CurrTVShow.Title" />
            <br />
            <label asp-for="@Model.CurrTVShow.Creator">The TV Show Creator</label>
            <input asp-for="@Model.CurrTVShow.Creator" />
            <br />
            <label asp-for="@Model.CurrTVShow.Year">The TV Show Release Year</label>
            <input asp-for="@Model.CurrTVShow.Year" />
            <br />
            <label asp-for="@Model.CurrTVShow.Genre">The TV Show Genre</label>
            <input asp-for="@Model.CurrTVShow.Genre" />
            <br />
            <label asp-for="@Model.CurrTVShow.Seasons">Number of Seasons</label>
            <input asp-for="@Model.CurrTVShow.Seasons" />
            <br />
            <label asp-for="@Model.CurrTVShow.Watched">Already Watched? </label>
            <input type="checkbox" asp-for="@Model.CurrTVShow.Watched" />
            <br />
            <label asp-for="@Model.CurrTVShow.Favourited">Favourite? </label>
            <input type="checkbox" asp-for="@Model.CurrTVShow.Favourited" />
            <br />
            <label asp-for="@Model.CurrTVShow.Queued">Queue to Read Next? </label>
            <input type="checkbox" asp-for="@Model.CurrTVShow.Queued" />
            <br />
            <label asp-for="@Model.CurrTVShow.Rating">The TV Show Rating</label>
            <select asp-for="@Model.CurrTVShow.Rating">
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <br />
            <label asp-for="@Model.CurrTVShow.Notes">Comments</label>
            <textarea asp-for="@Model.CurrTVShow.Notes" rows="4" cols="50">@Model.CurrTVShow.Notes</textarea>
            <br />
            <input asp-for="@Model.CurrTVShow.UserID" value="@Model.CurrUser.UserID" type="hidden" />
            <button type="submit">Submit</button>

        </form>
        <br />


    </body>

</html>
